<%= form_with model: book do |f| %>
 <h2 class="mt-3">New book</h2>
  <label class="mb-1" style="display: block;">Title</label>
    <%= f.text_field :title %>
  <label class="mb-1" style="display: block;">Opinion</label>
    <%= f.text_area :body, size: "23" %>
  <div class="mt-1">
    <%= f.submit "Create Book", class: "btn btn-success" %>
  </div>
<% end %>